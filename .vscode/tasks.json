{
	"version": "2.0.0",
	"command": "./node_modules/.bin/gulp",
	"windows": {
		"command": ".\\node_modules\\.bin\\gulp"
	},
	"isShellCommand": true,
	"tasks": [
		{
			"taskName": "ts-watch",
			"args": [
				"--no-color"
			],
			"isBuildCommand": true,
			"isBackground": true,
			"problemMatcher": {
				"owner": "typescript",
				"applyTo": "closedDocuments",
				"fileLocation": [ "absolute" ],
				"pattern": {
					"regexp": "Error: ([^(]+)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\): (.*)$",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"watching": {
					"beginsPattern": "Starting compilation",
					"endsPattern": "Finished compilation"
				}
			}
		},
		{
			"taskName": "tslint",
			"problemMatcher": "$tslint5"
		}
	]
}